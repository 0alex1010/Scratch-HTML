<!DOCTYPE html>
<html>
<head>
  <title>Minecraft Classic</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
    }

    canvas {
      display: block;
    }
  </style>
</head>
<body>
  <canvas id="gameCanvas"></canvas>

  <script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');

    // Game settings
    const blockSize = 32;
    const worldWidth = 16;
    const worldHeight = 16;

    // Player settings
    let playerX = 8;
    let playerY = 8;
    let playerSpeed = 2;

    // World data (simple 2D array)
    const world = [];
    for (let y = 0; y < worldHeight; y++) {
      world[y] = [];
      for (let x = 0; x < worldWidth; x++) {
        // Simple world generation:
        if (y === worldHeight - 1) { // Floor
          world[y][x] = 1;
        } else {
          world[y][x] = Math.random() < 0.1 ? 2 : 0; // Sparse grass
        }
      }
    }

    // Block colors
    const blockColors = {
      0: '#000000', // Empty
      1: '#339933', // Grass
      2: '#66CC66', // Dirt
    };

    // Draw the game world
    function drawWorld() {
      for (let y = 0; y < worldHeight; y++) {
        for (let x = 0; x < worldWidth; x++) {
          const blockId = world[y][x];
          ctx.fillStyle = blockColors[blockId];
          ctx.fillRect(x * blockSize, y * blockSize, blockSize, blockSize);
        }
      }
    }

    // Draw the player
    function drawPlayer() {
      ctx.fillStyle = '#FF0000'; // Red
      ctx.fillRect(playerX * blockSize, playerY * blockSize, blockSize, blockSize);
    }

    // Update the game state
    function update() {
      // Handle player movement (WASD)
      if (keys.KeyA && playerX > 0) playerX -= playerSpeed;
      if (keys.KeyD && playerX < worldWidth - 1) playerX += playerSpeed;
      if (keys.KeyW && playerY > 0) playerY -= playerSpeed;
      if (keys.KeyS && playerY < worldHeight - 1) playerY += playerSpeed;
    }

    // Key press handling
    const keys = {};
    document.addEventListener('keydown', (event) => {
      keys[event.code] = true;
    });
    document.addEventListener('keyup', (event) => {
      keys[event.code] = false;
    });

    // Game loop
    function gameLoop() {
      update();
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      drawWorld();
      drawPlayer();
      requestAnimationFrame(gameLoop);
    }

    // Set canvas size
    canvas.width = worldWidth * blockSize;
    canvas.height = worldHeight * blockSize;

    // Start the game loop
    gameLoop();
  </script>
</body>
</html>
